<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_claims" model="ir.ui.view">
        <field name="name">website.support.settings.view.form.inherit.claims</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_support.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='website_support']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Email de reclamos" for="email_claim"/>
                        <div class="text-muted">
                            Email para notificaciones de reclamos
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="email_claim" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Teléfono de reclamos" for="telefono_claim"/>
                        <div class="text-muted">
                            Teléfono para contacto de reclamos
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="telefono_claim" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Email sitio web" for="email_claim_show"/>
                        <div class="text-muted">
                            Email mostrado en el sitio web
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="email_claim_show" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
