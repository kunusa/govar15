<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_inherit_sequence" model="ir.ui.view">
            <field name="name">purchase.order.line.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('supplier_rank', '>', 0), ('active', '=', True)]</attribute>
                    <attribute name="options">{"no_create": True, "no_edit": True, "no_quick_create": True}</attribute>
                </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                    <field name="sequence_ref"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create": True, "no_edit": True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>