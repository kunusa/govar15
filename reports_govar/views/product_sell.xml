<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="product_report_stock_form" model="ir.ui.view">
    <field name="name">create.product.report.stock</field>
    <field name="model">product.report.stock</field>
    <field name="arch" type="xml">
      <form string="Generar Reporte">
        <script>
          $(document).ready(function(){
          $('.modal-dialog').css({'width': '70%', 'height': '75%'});
          $('.modal-content').css({'height': '115%'});
          $('.modal-body').css({'height': '115%'});
          });
        </script>
        <group col="4">
          <field name="initial_date" required="1" />
          <field name="compare_initial_date" />
          <field name="final_date" required="1" />
          <field name="compare_final_date" />
        </group>
        <group col="8">
          <field name="product_category" />
          <field name="product_product" />
          <field name="client_partner" />
          <field name="all_products" />
        </group>
        <group col="2">
          <field name="flag_product" invisible="1" />
          <field name="flag_product_product" invisible="1" />
          <field name="product_category_id" widget="many2many_tags"
            options="{'no_create':True, 'no_open':True}"
            attrs="{'invisible': [('flag_product', '=', False)]}" />
          <field name="datas" invisible="1" />
          <field name="datas_fname" invisible="1" />
        </group>
        <group col="2">
          <field name="product_ids" widget="many2many_tags"
            options="{'no_create':True, 'no_open':True}"
            attrs="{'invisible': [('flag_product_product', '=', False)]}" />
          <field name="partner_ids" widget="many2many_tags"
            options="{'no_create':True, 'no_open':True}"
            attrs="{'invisible': [('client_partner', '=', False)]}" domain="[('customer_rank','>',0)]" />
        </group>
        <footer>
          <button class="btn-primary" string="Generar Reporte" name="download_file_report_sales"
            type="object" />
          <button string="Cancelar" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="product_report_stock_wizard" model="ir.actions.act_window">
    <field name="name">Reporte de productos</field>
    <field name="res_model">product.report.stock</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="product_report_stock_form" />
    <field name="target">inline</field>
    <field name="target">new</field>
  </record>


  <menuitem id="product_report_menu" name="Reporte de productos vendidos"
    action="product_report_stock_wizard" parent="stock.menu_warehouse_report"/>
</odoo>