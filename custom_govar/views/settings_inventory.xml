<odoo>
    <record id="view_stock_configuration" model="ir.ui.view">
        <field name="name">Stock settings: quantity available to promise</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <data>
                 <xpath expr="//div[@name='warehouse_setting_container']" position="inside">
                    <group string="Envio de correo " col="4">
                        <field name="email_product_min_3" string="producto minimo 3"/>
                        <field name="email_product_min" string="producto minimo"/>
                    </group>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
