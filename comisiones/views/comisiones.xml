        <record id="view_comisiones_tree" model="ir.ui.view">
            <field name="name">view.comisiones.tree</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
             <tree create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="flagcompute" invisible="1"/>
                <field name="partner_id" string="Cliente"/>
                <field name="user_id"/>
                <field name ="create_uid"/>
                <field name="invoice_date"/>
                <field name="pay_date"/>
                <field name="amount_untaxed_signed" string="Subtotal(Sin IVA)" sum="Total"/>
                <field name="comision" sum="Total Comision"/>
                <field name="state" invisible="1"/>
            </tree>
            </field>
        </record>
       
        <record id="action_comisiones" model="ir.actions.act_window">
            <field name="name">Facturas</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),(0, 0,{'view_mode': 'tree','view_id':ref('view_comisiones_tree')}),(0, 0,{'view_mode': 'form','view_id':ref('account.view_move_form')})]"/>
            <field name="domain">[('move_type','=','out_invoice'),('payment_state','=','paid')]</field>
        </record>
  

        <menuitem id="menu_comisiones" name="Pago de Comisiones" parent="account.menu_finance_receivables" action="action_comisiones"/>

	
</odoo>