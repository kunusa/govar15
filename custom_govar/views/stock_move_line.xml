<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Heredar la vista stock.view_move_line_form -->
        <record id="view_move_line_form_inherit_track" model="ir.ui.view">
            <field name="name">stock.move.line.form.inherit.chatter</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <!-- Agregar el chatter despuÃ©s del sheet -->
                <sheet position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids" 
                               string="Messages" 
                               widget="message_thread"
                               options="{'message_post_mode': 'thread'}"/>
                    </div>
                </sheet>
            </field>
        </record>
    </data>
</odoo>