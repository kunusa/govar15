<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_remission" model="mail.template">
            <field name="name">Remision - Send by Email</field>
            <field name="model_id" ref="remisiones.model_remision"/>
            <field name="subject">{{ object.company_id.name }} Remision (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Estimado/a <t t-out="object.partner_id.name">Cliente</t>,
                        <br/><br/>
                        Adjunto encontrará la remisión <strong><t t-out="object.name ">REM001</t></strong> con los productos solicitados.
                        <br/><br/>
                        ¡Gracias por su confianza!
                        <br/><br/>  
                        No dude en contactarnos si tiene alguna pregunta.
                        <br/>
                        <t t-out="object.create_uid.name">Usuario</t>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="remisiones.remisiones_report"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
