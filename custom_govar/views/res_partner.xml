<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_partner_state_action_server" model="ir.actions.server">
            <field name="name">Enviar pagos pendientes</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_res_partner" />
            <field name="binding_model_id" ref="model_res_partner" />
            <field name="state">code</field>
            <field name="code">action = records.send_account_state()</field>
        </record>

        <!-- Smart button para mostrar notas de crédito -->
        <record id="view_partner_form_inherit_credit_notes" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.credit.notes</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_credit_notes" type="object" class="oe_stat_button" icon="fa-file-text-o" attrs="{'invisible': [('customer_rank', '=', 0)]}">
                        <field name="credit_note_count" widget="statinfo" string="Notas de Crédito" />
                    </button>
                    <button name="action_view_cancelled_invoices" type="object" class="oe_stat_button" icon="fa-ban" attrs="{'invisible': [('customer_rank', '=', 0)]}">
                        <field name="cancelled_invoice_count" widget="statinfo" string="Facturas Canceladas" />
                    </button>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                        <field name="supplier_rank" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='property_supplier_payment_term_id']" position="after">
                        <field name="account_supplier" />
                        <field name="account_creditor" />
                </xpath>                
            </field>
        </record>

        <record id="view_users_form_facturacion" model="ir.ui.view">
            <field name="name">res.users.view.form.facturacion</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <field name="tz" position="after">
                    <field name='default_journal'/>
                </field>
            </field>
        </record>

        <record id="ir_cron_update_user_groups_view" model="ir.cron">
            <field name="name">Regenerar vista de grupos de usuarios</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">model.action_update_user_groups_view()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

</odoo>