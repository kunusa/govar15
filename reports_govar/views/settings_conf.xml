<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_config" model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='shipping_setting_container']" position="after">
                <h2>Notificaciones de Ventas</h2>
                <div class="row mt16 o_settings_container" name="sales_email_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Correo para notificaciones de reportes de ventas trimistrales
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="email_sales" class="col-lg-3 o_light_label"/>
                                    <field name="email_sales" string=" "/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>