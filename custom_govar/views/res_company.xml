<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_company_form_inherit">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='street']" position="after">
                <field name="colonia" placeholder="Colonia"/>
                <field name="numero_ext" placeholder="No. Exterior"/>
                <field name="numero_int" placeholder="No. Interior"/>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="rfc_to_send"/>
                <field name="slogan" string="Lema"/>
            </xpath>
        </field>
    </record>

        <record model="ir.ui.view" id="view_company_banks_form_inherit" >
            <field name="name">res.company.banks.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Bancos" >
                        <field name = "banks_line_id">
                            <tree >
                                <field name="secuence"/>
                                <field name="name"/>
                                <field name="account" />
                                <field name="clabe" />
                            </tree>
                        </field>                
                    </page>  
                </xpath>    
            </field>
        </record> 

</odoo>