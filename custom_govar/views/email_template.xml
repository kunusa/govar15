<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="minimun_product_template" model="mail.template">
            <field name="name">product.avaibility.email.template</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="custom_govar.model_product_avaibility"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                <p>Reporte de productos minimo</p>
                </br></br>
                ]]>
            </field>
        </record>

        <record id="unblock_email_template" model="mail.template">
            <field name="name">unblock.email.template</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Se ha desbloqueado un cliente</p>
                <br/>
                <p>Modificado por: <t t-out="object.write_uid.partner_id.name"/></p>
                <p>Cliente: <t t-out="object.name"/></p>
                <a t-att-href="object.get_url_folio()">Ver cliente</a>
                <br/><br/>
            </field>
        </record>

        <record id="block_email_template" model="mail.template">
            <field name="name">block.email.template</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Se ha bloqueado un cliente</p>
                <br/>
                <p>Modificado por: <t t-out="object.write_uid.partner_id.name"/></p>
                <p>Cliente: <t t-out="object.name"/></p>
                <a t-att-href="object.get_url_folio()">Ver cliente</a>
                <br/><br/>
            </field>
        </record>        


        <record id="create_invoice_customer_company_email_move" model="mail.template">
            <field name="name">create.invoice.company.email.template</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Se ha creado una factura</p>
                <br/>
                <p>Creado por: <t t-out="object.create_uid.partner_id.name"/></p>
                <a t-att-href="object.get_url_folio()">Ver Factura</a>
                <br/><br/>
            </field>
        </record>

        <record id="create_invoice_supplier_company_email_template" model="mail.template">
            <field name="name">create.invoice.supplier.company.email.template</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Se ha creado una factura de proveedor</p>
                <br/>
                <p>Creado por: <t t-out="object.create_uid.partner_id.name"/></p>
                <a t-att-href="object.get_url_folio()">Ver Factura</a>
                <br/><br/>
            </field>
        </record>


        <record id="pending_payment_template" model="mail.template">
            <field name="name">pending.payment.template</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Estimado/a <t t-out="object.name"/>,</p>
                <br/>
                <p>Le informamos que tiene pagos pendientes por realizar.</p>
                <br/>
                <p>Adjunto encontrará el reporte detallado de sus pagos pendientes.</p>
                <br/>
                <p>Por favor, revise la información y proceda con los pagos correspondientes.</p>
                <br/>
                <p>Si tiene alguna pregunta, no dude en contactarnos.</p>
                <br/>
                <p>Saludos cordiales,</p>
                <p><t t-out="object.company_id.name"/></p>
            </field>
        </record>

</odoo>